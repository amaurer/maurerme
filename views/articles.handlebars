
<div id="content">
	<div class="inner-content">
		<div class="blog-page">
			<div class="blog-masonry">

				{{#each articles}}
				<div class="blog-post" itemscope itemtype="http://schema.org/TechArticle">
					{{#if image}}
					<div class="gal-content">
						<img itemprop="image" alt="{{urlTitle}}" {{{image}}}>
						<div class="blog-hover">
							<a class="read-more" href="/articles/{{@key}}/{{urlTitle}}/">Read More ></a>
						</div>		
					</div>
					{{/if}}
					<div class="post-title">
						<h2><a itemprop="url" href="/articles/{{@key}}/{{urlTitle}}/">{{title}}</a></h2>
						<ul class="post-tags">
							<li><a href="/about/"><i class="fa fa-user"></i><span itemprop="author">Andrew Maurer</span></a></li>
							<li><i class="fa fa-calendar"></i> <span itemprop="dateCreated">{{displayDate}}</span></li>
							<li><i class="fa fa-tags"></i> <span itemprop="keywords">
								{{#each tags}}
									{{#if @index}},{{/if}}{{this}}{{/each}}
							</span></li>
						</ul>
					</div>
					<div class="post-content">
						<p itemprop="description">{{summary}}</p>
					</div>
				</div>
				{{/each}}

			</div>
			<!--
			<a class="load-more" href="#">Load More ></a>
			-->
		</div>
	</div>
</div>